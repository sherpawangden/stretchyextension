{
    "name": "stretchy",
    "version": "1.0",
    "manifest_version": 2,
    "content_scripts": [
        {
           "matches": ["https://www.facebook.com/*", "https://twitter.com/*", "https://www.instagram.com/*", "https://www.youtube.com/*",
             "https://www.reddit.com/*"],
           "js": ["content.js"] 
        }
    ],
    "background" : {
        "scripts": ["background.js"]
    },
    "browser_action": {
        "default_icon": {
            "16": "16icon.png",
            "48": "48icon.png",
            "128":"128icon.png"
            },
        "default_popup": "popup.html",
        "default_title": "Stretch From Home"
    }
}