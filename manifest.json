{
    "name": "stretchy",
    "version": "1.0",
    "manifest_version": 2,
    "background" : {
        "scripts": ["background.js"],
        "persistent": false
    },
    "content_scripts": [
        {
           "matches" : ["http://*/*", "https://*/*"],
           "js": ["content.js"] 
        }
    ],
    "browser_action": {
        "default_icon": {
            "16": "16icon.png",
            "48": "48icon.png",
            "128":"128icon.png"
            },
        "default_popup": "popup.html",
        "default_title": "Stretch From Home"
    },
    "permissions": ["notifications", "alarms", "storage"]
}
